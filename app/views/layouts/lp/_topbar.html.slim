.top-bar-dark
  .container.hidden-xs
    .row
      .col-sm-8.text-left
        ul.list-inline.top-dark-right
          - if signed_in?
            li
              = link_to ''
                = icon('user')
                |  A Minha Conta
            li
              = link_to sign_out_path, method: :delete
                = icon('sign-out')
                |  Sair
          - else
            li
              = link_to sign_in_path
                = icon('sign-in')
                |  Entrar
            li
              = link_to sign_up_path
                = icon('user-plus')
                |  Registar
      .col-sm-4
        .top-bar-socials
          = link_to 'https://www.facebook.com/cesiuminho', class: 'social-icon-sm si-gray si-soundcloud'
            i.fab.fa-facebook-f
            i.fab.fa-facebook-f
          = link_to 'https://twitter.com/cesiuminho', class: 'social-icon-sm si-gray si-soundcloud'
            i.fab.fa-twitter
            i.fab.fa-twitter
          = link_to 'https://plus.google.com/u/1/b/103218725392069843585/103218725392069843585/posts', class: 'social-icon-sm si-gray si-soundcloud'
            i.fab.fa-google-plus-g
            i.fab.fa-google-plus-g
          = link_to 'https://www.instagram.com/cesiuminho', class: 'social-icon-sm si-gray si-soundcloud'
            i.fab.fa-instagram
            i.fab.fa-instagram
          = link_to 'https://github.com/orgs/cesium', class: 'social-icon-sm si-gray si-soundcloud'
            i.fab.fa-github
            i.fab.fa-github
