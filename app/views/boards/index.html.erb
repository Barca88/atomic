<div class="container">
  <h3>Direções</h3>
  <hr/>
  <br/>
    <% @boards.each do |board| %>
        <%= link_to board_path(board.id) do %>
          <div>
            <%= "Direção de #{board.start_date.year}/#{board.start_date.year + 1}" %>
          </div>
        <% end %>
    <% end %>
    <br/>
    <%= link_to "Nova Direção", new_board_path %>
</div>
